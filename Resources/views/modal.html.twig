{% trans_default_domain 'adminInterface' %}
{% set currentLocale = app.request.attributes.get('_locale') %}

{% set footerActions = block('page_box_footer_actions') %}

<div class="modal-dialog" style="width: {{ width|default('857px') }};" aria-labelledby="modatTitle">
    <div class="modal-content" role="document">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="modalTitle">{% block page_box_header %}Title{% endblock %}</h4>
        </div>
        <div class="modal-body">
            {% block page_box_body %}{% endblock %}
        </div>
        {% if footerActions is not empty %}
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'admin.generic.close'|trans }}</button>
            {{ footerActions|raw }}
        </div>
        {% endif %}
    </div>
</div>

{% block extra_js %}{% endblock %}
